{
    "name": "github-snippet-sync",
    "displayName": "GitHub Snippet Sync",
    "description": "Synchronize snippets from a GitHub repository",
    "version": "0.0.2",
    "publisher": "Baule",
    "repository": {
        "type": "git",
        "url": "https://github.com/votre-nom-utilisateur/github-snippet-sync.git"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.syncGitHubSnippets"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Local Snippet Sync",
            "properties": {
                "localSnippetSync.sourceFilePath": {
                    "type": "string",
                    "default": "",
                    "description": "Chemin vers le fichier source de snippets"
                },
                "localSnippetSync.syncIntervalMinutes": {
                    "type": "number",
                    "default": 30,
                    "description": "Intervalle de synchronisation en minutes"
                }
            }
        },
        "commands": [
            {
                "command": "extension.syncLocalSnippets",
                "title": "Synchroniser les snippets locaux"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.18.63",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^11.0.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
