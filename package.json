{
    "name": "github-snippet-sync",
    "displayName": "GitHub Snippet Sync",
    "description": "Synchronize snippets from a GitHub repository",
    "version": "0.0.1",
    "publisher": "Baule",
    "repository": {
        "type": "git",
        "url": ""
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.syncGitHubSnippets"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.syncGitHubSnippets",
                "title": "Sync Snippets from GitHub"
            }
        ],
        "configuration": {
            "title": "GitHub Snippet Sync",
            "properties": {
                "githubSnippetSync.repositoryUrl": {
                "type": "string",
                "default": "",
                "description": "URL du dépôt GitHub (ex: https://github.com/user/repo.git)"
                },
                "githubSnippetSync.snippetsFolder": {
                "type": "string",
                "default": "Snippets",
                "description": "Chemin du dossier contenant les snippets dans le dépôt"
                },
                "githubSnippetSync.authMethod": {
                "type": "string",
                "enum": ["token", "password"],
                "default": "token",
                "description": "Méthode d'authentification (token ou mot de passe)"
                },
                "githubSnippetSync.token": {
                "type": "string",
                "default": "",
                "description": "Token d'accès personnel GitHub"
                },
                "githubSnippetSync.username": {
                "type": "string",
                "default": "",
                "description": "Nom d'utilisateur GitHub (pour l'authentification par mot de passe)"
                },
                "githubSnippetSync.branch": {
                "type": "string",
                "default": "",
                "description": "nom de la branch où récupérer les fichiers"
                },
                "githubSnippetSync.password": {
                "type": "string",
                "default": "",
                "description": "Mot de passe GitHub (pour l'authentification par mot de passe)"
                }
            }
        }

    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "^14.18.63",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^11.0.1",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }
}
